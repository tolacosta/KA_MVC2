	public boolean delete(int categoryid) throws SQLException{
		try {
			String sql = "DELETE FROM TBLCATEGORY WHERE categoryid="+categoryid;
			Statement stmt = con.createStatement();
			if(stmt.executeUpdate(sql)>0){
				return true;
			}
		} catch (SQLException e) {
			e.printStackTrace();
		}finally{
			con.close();
		}
		return false;
	}
	
